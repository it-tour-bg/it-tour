= simple_form_for [:admin, @speaker] do |form|
  = form.error_notification

  = form.input :name
  = form.input :description
  = form.input :personal_site
  = form.input :company
  = form.input :company_site
  = form.input :photo, as: :file
  = form.input :tshirt_size

  = field_set_tag "Social links" do
    = form.input :twitter_account
    = form.input :github_account
    = form.input :facebook_account

  .form-actions
    = form.button :submit, class: 'btn-primary'
    = link_to 'Cancel', admin_speakers_path, class: 'btn btn-danger'

